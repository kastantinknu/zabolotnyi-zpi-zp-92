@model EditInfo
@{
ViewBag.Title = "Edit Player";
Layout = "_AdminLayout";
}


<form asp-action="Edit" method="post">

	<div class="form-group">
	<label asp-for="@Model.player.Id"></label>
	<input asp-for="@Model.player.Id" class="form-control"/>
	</div>

	<div class="form-group">
	<label asp-for="@Model.player.Name"></label>
	<input asp-for="@Model.player.Name" class="form-control"/>
	</div>

	<div class="form-group">
	<label asp-for ="@Model.player.Position"></label>
	<textarea asp-for="@Model.player.Position" class="form-control" ></textarea>
	</div>

	<div class="form-group">
	<label asp-for="@Model.player.RedCard"></label >
	<input asp-for="@Model.player.RedCard" class="form-control"/>
	</div>

	<div class="form-group">
	<label asp-for="@Model.player.TeamId"></label>
	<input asp-for="@Model.player.TeamId" class="form-control"/>
	</div>

	<div class="text-center">
	<button class="btn btn-primary" type="submit">Save</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</div>

</form>